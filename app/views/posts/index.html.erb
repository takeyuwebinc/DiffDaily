<div class="w-full">
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">最新の記事</h2>
    <p class="text-gray-600">AI生成による技術記事の一覧</p>
  </div>

  <% if @posts.any? %>
    <div class="space-y-6">
      <% @posts.each do |post| %>
        <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow border border-gray-200 p-6">
          <%= link_to post_path(post), class: "block" do %>
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-xl font-semibold text-gray-900 hover:text-blue-600 transition flex-1">
                <%= post.title %>
              </h3>
            </div>

            <% if post.summary.present? %>
              <p class="text-gray-700 mb-4 line-clamp-3">
                <%= post.summary %>
              </p>
            <% end %>

            <div class="flex items-center text-sm text-gray-500 space-x-4">
              <time datetime="<%= post.published_at&.in_time_zone('Tokyo')&.iso8601 %>">
                <%= post.published_at&.in_time_zone('Tokyo')&.strftime("%Y年%m月%d日") %>
              </time>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <%= post.repository.name %>
              </span>
              <% if post.generated_by.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= post.generated_by %>
                </span>
              <% end %>
            </div>
          <% end %>
        </article>
      <% end %>
    </div>

    <div class="mt-8">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <p class="text-gray-500 text-lg">まだ記事がありません</p>
      <p class="text-gray-400 text-sm mt-2">DailySummaryJobを実行して記事を生成してください</p>
    </div>
  <% end %>
</div>
