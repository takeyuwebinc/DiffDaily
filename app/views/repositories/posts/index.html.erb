<% content_for :rss_autodiscovery do %>
  <%= auto_discovery_link_tag :rss, repository_posts_url(@repository, format: :rss), title: "DiffDaily - #{@repository.name} RSS" %>
<% end %>

<div class="w-full">
  <div class="mb-6">
    <%= link_to root_path, class: "text-blue-600 hover:text-blue-800 text-sm flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      トップに戻る
    <% end %>
  </div>

  <div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @repository.name %></h2>
    <p class="text-gray-600">
      <%= link_to @repository.url, @repository.url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    </p>
  </div>

  <% if @posts.any? %>
    <div class="space-y-6">
      <% @posts.each do |post| %>
        <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow border border-gray-200 p-6">
          <%= link_to post_path(post), class: "block" do %>
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-xl font-semibold text-gray-900 hover:text-blue-600 transition flex-1">
                <%= post.title %>
              </h3>
            </div>

            <% if post.summary.present? %>
              <p class="text-gray-700 mb-4 line-clamp-3">
                <%= post.summary %>
              </p>
            <% end %>

            <div class="flex items-center text-sm text-gray-500 space-x-4">
              <time datetime="<%= post.published_at&.in_time_zone('Tokyo')&.iso8601 %>">
                <%= post.published_at&.in_time_zone('Tokyo')&.strftime("%Y年%m月%d日") %>
              </time>
              <% if post.generated_by.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= post.generated_by %>
                </span>
              <% end %>
            </div>
          <% end %>
        </article>
      <% end %>
    </div>

    <div class="mt-8">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <p class="text-gray-500 text-lg">まだ記事がありません</p>
    </div>
  <% end %>
</div>
