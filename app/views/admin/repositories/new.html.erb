<% content_for(:title) { "Add Repository - DiffDaily Admin" } %>

<div class="max-w-2xl">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Add Repository</h2>

  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with model: [:admin, @repository], local: true do |f| %>
      <% if @repository.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
          <ul class="list-disc list-inside">
            <% @repository.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :name, "Repository Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., rails/rails" %>
        <p class="mt-1 text-sm text-gray-500">Enter the repository identifier (owner/repo format)</p>
      </div>

      <div class="mb-6">
        <%= f.label :url, "Repository URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.url_field :url, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "https://github.com/rails/rails" %>
        <p class="mt-1 text-sm text-gray-500">Enter the full GitHub repository URL</p>
      </div>

      <div class="flex items-center gap-4">
        <%= f.submit "Add Repository", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition cursor-pointer" %>
        <%= link_to "Cancel", admin_repositories_path, class: "text-gray-600 hover:text-gray-800" %>
      </div>
    <% end %>
  </div>
</div>
