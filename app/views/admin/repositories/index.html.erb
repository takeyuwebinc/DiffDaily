<% content_for(:title) { "Repositories - DiffDaily Admin" } %>

<div class="flex justify-between items-center mb-6">
  <h2 class="text-2xl font-bold text-gray-800">Repositories</h2>
  <%= link_to "Add Repository", new_admin_repository_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Fetched</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posts</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @repositories.each do |repository| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900"><%= repository.name %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <a href="<%= repository.url %>" target="_blank" class="text-sm text-blue-600 hover:text-blue-800">
              <%= repository.url.truncate(50) %>
            </a>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= repository.last_fetched_at&.strftime("%Y-%m-%d %H:%M") || "-" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= repository.posts.size %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= button_to "Delete", admin_repository_path(repository), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this repository? All related posts will also be deleted." }, class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>

      <% if @repositories.empty? %>
        <tr>
          <td colspan="5" class="px-6 py-8 text-center text-gray-500">
            No repositories registered yet.
            <%= link_to "Add your first repository", new_admin_repository_path, class: "text-blue-600 hover:text-blue-800" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
